@model EmployeeManagementSystem.Models.Employee

<h2>Employee Details</h2>
<hr />
<div>
    <dl class="row">
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.FirstName @Model.LastName</dd>

        <dt class="col-sm-2">Email</dt>
        <dd class="col-sm-10">@Model.Email</dd>

        <dt class="col-sm-2">Phone Number</dt>
        <dd class="col-sm-10">@Model.PhoneNumber</dd>

        <dt class="col-sm-2">Date of Birth</dt>
        <dd class="col-sm-10">@Model.DateOfBirth.ToShortDateString()</dd>

        <dt class="col-sm-2">Address</dt>
        <dd class="col-sm-10">@Model.Address</dd>

        <dt class="col-sm-2">Department</dt>
        <dd class="col-sm-10">@Model.Department</dd>

        <dt class="col-sm-2">Position</dt>
        <dd class="col-sm-10">@Model.Position</dd>

        <dt class="col-sm-2">Hire Date</dt>
        <dd class="col-sm-10">@Model.HireDate.ToShortDateString()</dd>
    </dl>

    <!-- Display Employment History if available -->
    <h4>Employment History</h4>
    @if (Model.EmploymentHistories != null && Model.EmploymentHistories.Any())
    {
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Company Name</th>
                    <th>Position</th>
                    <th>Start Date</th>
                    <th>End Date</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var history in Model.EmploymentHistories)
                {
                    <tr>
                        <td>@history.CompanyName</td>
                        <td>@history.Position</td>
                        <td>@history.StartDate.ToShortDateString()</td>
                        <td>@(history.EndDate.HasValue ? history.EndDate.Value.ToShortDateString() : "Present")</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No employment history available.</p>
    }
    <!-- Add Employment History Button -->
    <a asp-action="AddEmploymentHistory" asp-route-employeeId="@Model.Id" class="btn btn-success">Add Employment History</a>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edit</a>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>